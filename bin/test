#!/bin/bash

if [[ "$CIRCLECI" != "true" ]]; then
  docker-compose stop
  docker-compose rm -f
  docker-compose build
fi

docker-compose up -d mysql
sleep 10
docker-compose run app go test \
  ./fetcher/...
docker-compose run app go test \
  ./option/... \
  ./processor/... \
  ./server/... \
  ./storage/... \
  ./uploader/...
