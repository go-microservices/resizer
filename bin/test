#!/bin/bash

if [[ "$CIRCLECI" != "true" ]]; then
  docker-compose stop
  docker-compose rm -f
  docker-compose build
fi

docker-compose \
  -f docker-compose.yml \
  -f docker-compose.test.yml \
  up -d mysql
sleep 10
docker-compose \
  -f docker-compose.yml \
  -f docker-compose.test.yml \
  up app
