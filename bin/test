#!/bin/bash

if [[ "$CIRCLECI" != "true" ]]; then
  docker-compose stop
  docker-compose rm -f
  docker-compose \
    -f docker-compose.yml \
    -f docker-compose.test.yml \
    build
fi
mkdir -p ./.logs

docker-compose \
  -f docker-compose.yml \
  -f docker-compose.test.yml \
  up -d mysql
sleep 10
docker-compose \
  -f docker-compose.yml \
  -f docker-compose.test.yml \
  run app | tee ./.logs/$(date +"%Y%m%d%H%M%S").log
